<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.branwenevans.todo">

    <uses-sdk android:minSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="com.branwenevans.todoapp.MainActivity"
            android:label="TodoApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.branwenevans.todoapp.AddItem"
            android:label="Add Item"
            android:parentActivityName="com.branwenevans.todoapp.MainActivity"/>
        <activity
            android:name="com.branwenevans.todoapp.ClickItem"
            android:label="Details"
            android:parentActivityName="com.branwenevans.todoapp.MainActivity"/>



    </application>

</manifest>
